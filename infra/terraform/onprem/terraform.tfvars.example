# On-Premise Deployment - Example Terraform Variables
# Copy this file to terraform.tfvars and update with your values

# Project Configuration
project_name = "ai-saas-dashboard"
environment  = "prod"
location     = "on-premise"

# Kubernetes Configuration
kubeconfig_path    = "~/.kube/config"
kubeconfig_context = ""  # Leave empty to use current context
create_namespaces  = true

# Storage Configuration
storage_class            = "local-path"  # Options: local-path, nfs-client, longhorn, rook-ceph, openebs-hostpath
postgres_storage_size    = "10Gi"
registry_storage_size    = "50Gi"
monitoring_storage_size  = "30Gi"

# Container Registry Configuration
registry_enabled = true
registry_type    = "docker-registry"  # Options: docker-registry, harbor
registry_domain  = "registry.local"

# Logging Configuration
logging_backend = "loki"  # Options: loki, elasticsearch

# Ingress Configuration
ingress_class = "nginx"  # Options: nginx, traefik
app_domain    = "app.local"
enable_tls    = true
cert_manager_enabled = false

# Application Configuration
backend_replicas  = 3
frontend_replicas = 2

# Database Configuration
postgres_resources = {
  requests_memory = "256Mi"
  requests_cpu    = "250m"
  limits_memory   = "512Mi"
  limits_cpu      = "500m"
}

# Monitoring Configuration
prometheus_retention = "15d"
grafana_admin_password = ""  # Leave empty to auto-generate

# Tags
tags = {
  Project     = "AI SaaS Dashboard"
  ManagedBy   = "Terraform"
  Environment = "production"
  Deployment  = "on-premise"
}
